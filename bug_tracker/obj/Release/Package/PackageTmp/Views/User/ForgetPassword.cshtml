@model bug_tracker.Models.ForgetPasswordViewModel

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">忘記密碼?</h1>
                            </div>
                            <form class="user">

                                <div class="form-group">
                                    @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "請輸入電子信箱" } })
                                    @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })

                                </div>
                                <input type="submit" value="確認!" class="btn btn-primary btn-user btn-block" />
                            </form>
                            <hr>
                            <div class="text-center">
                                @*<a class="small" href="register.html">Create an Account!</a>*@
                                @Html.ActionLink("註冊新帳號!", "Register", "User", null, new { @class = "small" })
                            </div>
                            <div class="text-center">
                                @Html.ActionLink("返回登入!", "Login", "User", null, new { @class = "small" })
                                @*<a class="small" href="login.html">Already have an account? Login!</a>*@
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
